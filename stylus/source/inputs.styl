input
  background white


// ---- LABELS ---- //
label
  margin-bottom 5px


// ---- TEXT ---- //
select,
input[type="text"],
input[type="number"],
input[type="email"],
input[type="password"],
textarea
  border 1px solid $lightergray


// ---- NUMBER ---- //
input[type="number"]
  &::-webkit-inner-spin-button, 
  &::-webkit-outer-spin-button
    opacity 1


// ---- DROPDOWNS ---- //
ul.select
  background-color white
  li.placeholder
    border 1px solid $lightergray
  li.option
    border-left 1px solid $lightergray
    border-right 1px solid $lightergray
    &:last-of-type
      border-bottom 1px solid $lightergray
    &:hover
      background-color $lightestgray
  

// ---- BUTTONS ---- //
input[type="checkbox"],
input[type="radio"]
  position relative
  height 14px
  width 14px
  margin 0 10px 15px 0
  padding 0
  cursor pointer
  +label
    cursor pointer

// Checkbox
input[type="checkbox"]
  border 1px solid #ccc
  border-radius 2px
  &:checked:after
    content '\2714'
    position absolute
    top -5px
    left 1px
    font-size 18px
    font-weight bold
    color $lightblue
    transform rotateZ(5deg)

// Radio
input[type="radio"]
  border 2px solid #ccc
  border-radius 100%
  &:checked
    border-color $lightblue
    background-color $lightblue
    cursor default
    +label
      cursor default





#wpadminbar
  overflow hidden

body
  margin 0
  padding 0

@media screen and (min-width 783px)
  .admin-bar
    padding-top 32px
@media screen and (max-width 782px)
  .admin-bar
    padding-top 46px

div
  box-sizing border-box

select
  box-sizing border-box
  padding 8px 12px
  border 0
  outline 0
  font-family "Lato"
  font-size 1em
  line-height 1
  cursor pointer

input,
textarea,
ul.select li.placeholder,
ul.select li.option,
button
  appearance none
  box-sizing border-box
  padding 8px 12px
  border 0
  outline 0
  font-family "Lato"
  font-size 1em
  line-height 1

ul.select li,
label,
button
  user-select none


ul.select
  padding 0
  list-style none
  li.option
    display none

input,
textarea
  &::placeholder
    color #aaa
ul.select
  li.placeholder
    color #aaa

ul,
ol,
li
  margin 0
  padding 0
ul,
ol
  padding-left 15px
li
  padding-left 5px

i
  margin-right 3px
  &.reverse
    margin-right 0
    margin-left 3px



// ---- WOOCOMMERCE ---- //
.woocommerce div.product form.cart, .woocommerce div.product p.cart
  margin-bottom 0
// ---- LOGGED IN ---- //
.admin-bar nav
  top 32px


// ---- LAYOUT ---- //
nav
  z-index 999
  position fixed
  top 0
  width 100%
  background-color white
  box-shadow 0 1px 3px rgba(0,0,0,.15)
  // visibility hidden
  .container
    max-width 1200px
    display flex
    align-items center
    justify-content space-between
    margin 0 auto
  .left,
  .right
    display flex
    align-items center
  .left
    justify-content flex-start
  .right
    justify-content flex-end


// ---- LOGO ---- //
nav
  .logo
    height 45px
    width 45px
    background-image url('/wp-content/uploads/2017/05/Layer-1.png')
    background-size 26px auto
    background-position center
    background-repeat no-repeat


// ---- NAV ITEMS ---- //
nav .menu
  // Containers
  > .item
    display flex
    align-items center
    position relative
    height 45px
    padding 0 14px

  // Content
  > .item
    p
      margin 0
      border 1px solid transparent
      border-radius 2px
      font-family "Lato"
      font-size 13px
      font-weight 700
      letter-spacing .33px
    i
      font-size 16px
    p,
    p > a,
    i
      color $blue
    &:not(.login-status):hover
    &.login-status .greeting:hover
      p,
      p > a,
      i
        color $linkhighlight
    &.login-status
      .logout
        a
          margin-left 3px
          font-size .9em
          color #c6d1d8
          letter-spacing .75px
        &:hover
          a
            color $linkhighlight
      .greeting
        a


  // Trigger Button
  > .trigger.item
    cursor pointer
    &.open
      background-color $logoblue
      p,
      i
        color white

  // Active Link
  // > .active.item
  //   border-bottom 3px solid $linkhighlight

  // CTA Button
  > .cta.item
    p
      padding 4px 8px
      border-color $blue
    &:hover
      p
        border-color $linkhighlight
        background-color $linkhighlight
        color white


// ---- DROPDOWN MENUS ---- //
nav .menu
  // Default Layout (closed)
  > .trigger.item
    .sub.menu
      z-index 1
      display none
      position absolute
      top 45px
      left 0
      min-width 100%
      border-top 2px solid #e5e5e5
      background-color white
      box-shadow 0 3px 5px rgba(0,0,0,.25)
      .section
        width 200px
        padding 10px 0
        border-right 1px solid #eee
  // Open Layout
  .open.trigger.item
    .sub.menu
      display block
      &.composite
        display flex

  // Content
  > .trigger.item
    .sub.menu
      .header
        padding 8px 16px
        font-family 'Lato'
        font-size 13px
        font-weight 600
        color #aaa
        text-transform uppercase
        cursor default
      .item
        height auto
        padding 5px 16px
        p
          width 100%
          font-weight normal
          color #000
        &:hover
          background #f5f5f5

.mobile-menu
  display none
.modal
  z-index 999
  display none
  align-items center
  justify-content center
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  .mask
    position absolute
    height 100vh
    width 100vw
    background-color rgba(0,0,0,.25)
  .container
    z-index 1
    position relative
    padding 35px
    border 1px solid #ddd
    background-color white
    box-shadow 0 1px 15px rgba(0,0,0,0.35)


// ---- CONTENT ---- //
.modal .container
  .close
    position absolute
    top 5px
    right 8px
    font-size 1.5em
    font-weight 600
    color #bbb
    line-height 1
    



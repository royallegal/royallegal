ul.menu
  list-style none


ul.dropdown
  z-index 1
  position absolute
  padding 0
  border 1px solid #ddd
  background-color white
  box-shadow 0 1px 3px rgba(0,0,0,.15)
  li
    display flex
    align-items center
    padding 12px
    white-space nowrap
    cursor pointer


ul.gray
  li
    color #999
    &:hover
      background-color #f5f5f5
